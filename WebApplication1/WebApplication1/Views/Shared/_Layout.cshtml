<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Comic System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="ComicBooks" asp-action="Index">ComicSys</a>
        <div class="d-flex">
            <a class="nav-link text-light mx-1" asp-controller="ComicBooks" asp-action="Index">Books</a>
            <a class="nav-link text-light mx-1" asp-controller="Rentals" asp-action="Create">Rent</a>
            <a class="nav-link text-light mx-1" asp-controller="Rentals" asp-action="Report">Report</a>
            <a class="nav-link text-light mx-1" asp-controller="Account" asp-action="Register">Register</a>
            <a class="nav-link text-light mx-1" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @RenderBody()
</div>
</body>
</html>