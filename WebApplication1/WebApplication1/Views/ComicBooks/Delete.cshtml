@model WebApplication1.Models.ComicBook

@{
    ViewData["Title"] = "Delete Comic Book";
}

<h2>Delete Comic Book</h2>

<div class="alert alert-danger mt-3">
    <h5>Are you sure you want to delete this comic book?</h5>
    <p><strong>@Model.Title</strong> by @Model.Author</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ComicBookID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>