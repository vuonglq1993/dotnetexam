@model WebApplication1.Models.ComicBook

@{
    ViewData["Title"] = "Comic Book Details";
}

<h2>Comic Book Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Author:</strong> @Model.Author</p>
        <p class="card-text"><strong>Price per day:</strong> @Model.PricePerDay.ToString("N2")</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to list</a>